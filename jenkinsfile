pipeline {
    agent any 
    stages {
        stage('SCM') {
            steps {
                git 'https://github.com/AbbasGori/python.git'
             }
        }
        stage('Building image') {
            steps {
                script {
                    docker.build registry + ":$BUILD_NUMBER"
                }
            }
        }
        stage('Stage 1') {
            steps {
                sh 'docker ps | grep "$BUILD_NUMBER"' 
            }
        }
    }
}
