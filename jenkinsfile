pipeline {
    
    environment {
        registry = "gcr.io/s4-project-202316/success4/jenkins-push-test"
        dockerImage = ""
    }
    
    agent any
    
    stages {
        stage('SCM') {
            steps {
                git 'https://github.com/AbbasGori/python.git'
             }
        }
        
        stage('Building image') {
            steps {
                script {
                    docker.build registry + ":$BUILD_NUMBER"
                }
            }
        }
        
        stage('Stage 1') {
            steps {
                sh 'docker ps | grep "$BUILD_NUMBER"' 
            }
        }
    }
}
